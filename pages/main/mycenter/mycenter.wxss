}
 .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  top:75%;  
  display: flex;  
  justify-content: center;  
} 
 .dots .dot{  
 z-index: 999;
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius: 8rpx;  
  transition: all .6s;  
}   
.dots .dot.active{  
  width: 24rpx;  
  background: #f80;  
}  
.hide{
	height:90%;
}
.slide-image{
	display: block;
	width:100%;
	height:100%;
	
}
