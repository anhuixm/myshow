/**index.wxss**/
.commodity_screen{
   width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 100;

}

.modal{
  position:absolute;
  z-index: 9999;
  width:60%;
  padding:5% 10% ;
  height:450rpx;
  top:200rpx;
  left:10%;
  background: #fff;

}
.modalTitle{
  width:100%;
  height:100rpx;
  font-size: 58rpx;
  color: #000;
}
.modalPic{
  width:100%;
  height:150rpx; 
  border-bottom:2rpx solid #000; 
}
.modalIcon{
width: 100rpx;
height:100rpx;
border-radius:50%;
float: left;
}
.modalIcon image {
  display: block;
  width:100%;
  height:100%

}
.modalword{
  width: 70%;
  float: right;
  font-size: 36rpx;
  color: #aaa;
  margin-top:8rpx;
  height: 142rpx;
}
.message{
  height: 80rpx;
}
.messageCircle{
  float: left;
  width:20rpx;
  height:20rpx;
  border-radius:50%;
  margin:40rpx 10rpx 0 ;
  background: #d1d1d1;
}
.messageCentent{
  width:86%;
  float: left;
  margin-top:20rpx;
  font-size: 32rpx;
  color: #d1d1d1;
}
.btn{
  height: 80rpx;
}
.btn1,.btn2{
  margin-top: 20rpx;
  border: 0;
  outline: none;
  float: right;
  margin-left:16rpx;
  font-size: 36rpx;
  color: greenyellow;
  }
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #000;
}

.usermotto {
  margin-top: 100px;
}